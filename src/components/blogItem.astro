---
import { Image } from "@astrojs/image/components"

export interface Props {
  title: string
  category: string
  description: string
  date: string
  image: string
  id: string
}

const { title, category, date, description, image, id } = Astro.props
---

<a href={`/posts/${id}`} class="flex flex-row space-x-16 cursor-pointer group">
  <div
    class="flex-none rounded-lg overflow-hidden flex flex-col items-center justify-center"
  >
    <Image
      alt="The Thumbnail"
      src={image}
      width={220}
      height={220}
      class="object-contain"
    />
  </div>
  <div class="flex-1 flex flex-col justify-between py-2">
    <div>
      <p class="text-xl text-black/70 font-medium">{category}</p>
      <p
        class="text-5xl font-bold group-hover:text-blue-500 transition duration-300"
      >
        {title}
      </p>
      <p class="text-xl font-medium py-3">
        {description}
      </p>
    </div>
    <p class="mt-2 text-lg text-black/70 font-medium">{date}</p>
  </div>
</a>
