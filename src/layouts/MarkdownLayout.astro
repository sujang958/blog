---
import Layout from "./Layout.astro"

export interface Props {
  title: string
}

const { title, frontmatter } = Astro.props
---

<Layout title={title}>
  <div class="py-16 max-w-2xl w-full self-center flex flex-col">
    <img
      src={frontmatter.image}
      alt="The Blog Image"
      class="object-contain h-64 rounded-lg p-8"
    />
    <div class="py-8"></div>
    <p class="text-xl">{frontmatter.category}</p>
    <p class="mt-1 font-bold text-5xl text-black">{frontmatter.title}</p>
    <p class="mt-4">{frontmatter.date}</p>
    <div class="prose-lg py-16">
      <slot />
    </div>
  </div>
</Layout>
